@using CPTool.Application.Features.TaxCodeLDFeatures.Command.CreateEdit
@using CPTool.Application.Features.TaxCodeLDFeatures.Query.GetList
@using CPTool.Application.Features.TaxCodeLPFeatures.Command.CreateEdit
@using CPTool.Application.Features.TaxCodeLPFeatures.Query.GetList
@using CPTool.Application.Features.VendorCodeFeatures.Command.CreateEdit
@using CPTool.Application.Features.VendorCodeFeatures.Query.GetList

<MudDialog DisableSidePadding="true">
    <DialogContent>
        <MudContainer Style="max-height: 550px; overflow-y: scroll" Fixed="true" MaxWidth="MaxWidth.Medium">
            <MudPaper Class="pa-2 ma-2" Outlined="true" Elevation="0">
                <CascadingValue Value="this">


                    <MudForm Model="Model" @ref="form">
                        <SelectComponent T="AddEditBrandCommand"
                                         Elements=@Brands
                                       
                                         Label="Brand or Service"
                                         Value="Model.BrandCommand">


                        </SelectComponent>
                        <MudTextField @bind-Value="Model.SupplierCommand.Name"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      Immediate="true"
                                      Label="Supplier Name"
                                      Required=true
                                      Validation="@(new Func<string, string>(ValidateSupplieName))" />




                        <MudTextField @bind-Value="@Model.SupplierCommand.ContactPerson"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      Immediate="true"
                                      Label="Contact person" />
                        <MudTextField @bind-Value="@Model.SupplierCommand.Email"
                                      InputType="InputType.Email"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      Immediate="true"
                                      Label="email" />
                        <MudTextField @bind-Value="@Model.SupplierCommand.Phone"
                                      InputType="InputType.Telephone"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      Immediate="true"
                                      Label="Phone" />
                        <MudTextField @bind-Value="@Model.SupplierCommand.Address"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      Immediate="true"
                                      Label="Address"></MudTextField>


                        <AutoCompleteComponent T="AddEditVendorCodeCommand"
                                               TList="GetVendorCodeListQuery"
                                               TableName="Vendor Code"
                                               Label="Vendor Code"
                                               ParentId=0
                                               UpdateParent="Validateform"
                                               @bind-Elements="@VendorCodes"
                                               Validation="@(new Func<string, string>(ReviewVendorCode))"
                                               @bind-Model=@Model.SupplierCommand.VendorCodeCommand></AutoCompleteComponent>
                        <AutoCompleteComponent T="AddEditTaxCodeLDCommand"
                                               TList="GetTaxCodeLDListQuery"
                                               TableName="Tax Codel LD"
                                               Required=true
                                               Label="Tax Codel LD"
                                               UpdateParent="Validateform"
                                               ParentId=0
                                               @bind-Elements="@TaxCodeLDs"
                                               Validation="@(new Func<string, string>(ReviewTaxCodeLD))"
                                               @bind-Model=@Model.SupplierCommand.TaxCodeLDCommand></AutoCompleteComponent>
                        <AutoCompleteComponent T="AddEditTaxCodeLPCommand"
                                               TList="GetTaxCodeLPListQuery"
                                               TableName="Vendor Code"
                                               Label="Tax Codel LD"
                                               UpdateParent="Validateform"
                                               Required=true
                                               ParentId=0
                                               @bind-Elements="@TaxCodeLPs"
                                               Validation="@(new Func<string, string>(ReviewTaxCodeLP))"
                                               @bind-Model=@Model.SupplierCommand.TaxCodeLPCommand></AutoCompleteComponent>
                       

                    </MudForm>
                </CascadingValue>

            </MudPaper>
        </MudContainer>
    </DialogContent>
    <DialogActions>

        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="Submit">Save</MudButton>

        <MudButton Variant="Variant.Filled" DisableElevation="true" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>
