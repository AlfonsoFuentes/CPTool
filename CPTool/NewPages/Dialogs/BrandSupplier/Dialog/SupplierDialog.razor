{

}
<MudDialog DisableSidePadding="true">
    <DialogContent>
        <MudContainer Style="max-height: 550px; overflow-y: scroll" Fixed="true" MaxWidth="MaxWidth.Medium">
            <MudPaper Class="pa-2 ma-2" Outlined="true" Elevation="0">
                <CascadingValue Value="this">


                    <MudForm Model="Model" @ref="form">
                        <SelectComponent T="EditBrand"
                                         Elements=@GlobalTables.Brands
                                         Label="Brand or Service"
                                         @bind-Value="@Model.Brand">


                        </SelectComponent>
                        <TextComponent @bind-Model="@Model.Supplier" Label="Supplier Name"
                                       Validation="@(new Func<string, string>(ValidateSupplieName))"
                                       PropertyName="Name" Required=true></TextComponent>

                        <TextComponent @bind-Model="@Model.Supplier" Label="Contact person"
                                       PropertyName="ContactPerson" Required=true></TextComponent>
                        <TextComponent @bind-Model="@Model.Supplier" Label="email"
                                       InputType="InputType.Email"
                                       PropertyName="Email" Required=true></TextComponent>

                        <TextComponent @bind-Model="@Model.Supplier" Label="Phone"
                                       InputType="InputType.Telephone"
                                       PropertyName="Phone" Required=true></TextComponent>
                        <TextComponent @bind-Model="@Model.Supplier" Label="Address"
                                       PropertyName="Address" Required=true></TextComponent>

                        <TextComponent @bind-Model="@Model.Supplier" Label="Vendor Code"
                         Validation="@(new Func<string, string>(ReviewVendorCode))"
                                       PropertyName="VendorCode" Required=true></TextComponent>

                     
                        <AutoCompleteComponent TEdit="EditTaxCodeLD"
                                               TList="GetTaxCodeLDListQuery"
                                               TGedById="GetByIdTaxCodeLDQuery"
                                               PropertyName="Name"
                                               TableName="Tax Codel LD"
                                               Required=true
                                               Label="Tax Codel LD"
                                               ValidateForm="Validateform"
                                               @bind-Elements="@GlobalTables.TaxCodeLDs"
                                               Validation="@(new Func<string, string>(GlobalTables.ReviewTaxCodeLD))"
                                               @bind-Model=@Model.Supplier.TaxCodeLD></AutoCompleteComponent>
                        <AutoCompleteComponent TEdit="EditTaxCodeLP"
                                               TList="GetTaxCodeLPListQuery"
                                               TGedById="GetByIdTaxCodeLPQuery" 
                                               PropertyName="Name"
                                               TableName="Tax Code LP"
                                               Label="Tax Code LP"
                                               ValidateForm="Validateform"
                                               Required=true
                                               @bind-Elements="@GlobalTables.TaxCodeLPs"
                                               Validation="@(new Func<string, string>(GlobalTables.ReviewTaxCodeLP))"
                                               @bind-Model=@Model.Supplier.TaxCodeLP></AutoCompleteComponent>


                    </MudForm>
                </CascadingValue>

            </MudPaper>
        </MudContainer>
    </DialogContent>
    <DialogActions>

        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="Submit">Save</MudButton>

        <MudButton Variant="Variant.Filled" DisableElevation="true" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>
@code {
    bool debug = true;
}
