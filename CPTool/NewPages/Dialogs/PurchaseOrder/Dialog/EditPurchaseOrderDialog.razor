@if (debug)
{
    <MudDialog DisableSidePadding="true">
        <DialogContent>
            <MudContainer Style="max-height: 550px; overflow-y: scroll" Fixed="true" MaxWidth="MaxWidth.Medium">
                <MudPaper Class="pa-2 ma-2" Outlined="true" Elevation="0">
                    <CascadingValue Value="this">

                        <MudForm Model="Model" @ref="form">
                            <MudGrid>
                                <MudItem xs="12" sm="6" Class="pa-4">
                                    <MudTextField @bind-Value="Model.Name"
                                              Variant="Variant.Outlined"
                                              Margin="Margin.Dense"
                                              Immediate="true"
                                              Required=true
                                              Disabled=true
                                              Label="Purchase Order Name"></MudTextField>

                                    <MudTextField @bind-Value="Model.PurchaseRequisition"
                                              Variant="Variant.Outlined"
                                              Margin="Margin.Dense"
                                              Immediate="true"
                                              Required=true
                                              Disabled=true
                                              Label="Purchase requistion Name"></MudTextField>
                                </MudItem>
                                <MudItem xs="12" sm="6" Class="pa-4">
                                    <MudTextField @bind-Value="Model.pBrand.Name"
                                              Variant="Variant.Outlined"
                                              Margin="Margin.Dense"
                                              Immediate="true"
                                              Required=true
                                              Disabled=true
                                              Label="@Model.pBrand.BrandType.ToString()"></MudTextField>
                                    <MudTextField @bind-Value="Model.pSupplier.Name"
                                              Variant="Variant.Outlined"
                                              Margin="Margin.Dense"
                                              Immediate="true"
                                              Required=true
                                              Disabled=true
                                              Label="Supplier"></MudTextField>


                                </MudItem>
                                <MudItem xs="12" sm="12" Class="pa-1">
                                </MudItem>
                            </MudGrid>

                        </MudForm>
                    </CascadingValue>



                </MudPaper>
            </MudContainer>
        </DialogContent>
        <DialogActions>

            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="Submit">Save</MudButton>

            <MudButton Variant="Variant.Filled" DisableElevation="true" OnClick="Cancel">Cancel</MudButton>
        </DialogActions>
    </MudDialog>
}
@code {
    bool debug = true;
}
