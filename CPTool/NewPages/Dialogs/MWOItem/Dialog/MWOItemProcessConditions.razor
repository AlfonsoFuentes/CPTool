@using CPTool.Application.Features.ProcessFluidFeatures.CreateEdit
@using CPTool.Application.Features.ProcessFluidFeatures.Query.GetById
@using CPTool.Application.Features.ProcessFluidFeatures.Query.GetList
@if (assign)
{
    <MudGrid>
        <MudItem xs="12" sm="10">
            <AutoCompleteComponent TEdit="EditProcessFluid"
                               TGedById="GetByIdProcessFluidQuery"
                               TList="GetProcessFluidListQuery"
                               TableName="Process Fluid"
                               Label="Process Fluid"
                               SelectionChanged="OnProcessFluidChanged"
                               ValidateForm="DialogParent.Validateform"
                               @bind-Elements="@GlobalTables.ProcessFluids"
                               Validation="@(new Func<string, string>(GlobalTables.ValidateProcessFluid))"
                               Model=@ProcessFluid>

            </AutoCompleteComponent>
        </MudItem>
        <MudItem xs="12" sm="10">
            <MudStack >
            <SelectUnitComponent @bind-Model=@ProcessCondition.Temperature UpdateParent=DialogParent.Validateform></SelectUnitComponent>
            <SelectUnitComponent @bind-Model=@ProcessCondition.Pressure UpdateParent=DialogParent.Validateform></SelectUnitComponent>
            <SelectUnitComponent @bind-Model=@ProcessCondition.MassFlow UpdateParent=DialogParent.Validateform></SelectUnitComponent>
            <SelectUnitComponent @bind-Model=@ProcessCondition.VolumetricFlow UpdateParent=DialogParent.Validateform></SelectUnitComponent>
            <SelectUnitComponent @bind-Model=@ProcessCondition.Density UpdateParent=DialogParent.Validateform></SelectUnitComponent>
       @* </MudItem>
        <MudItem xs="12" sm="6">*@
            <SelectUnitComponent @bind-Model=@ProcessCondition.SpecificCp UpdateParent=DialogParent.Validateform></SelectUnitComponent>
            <SelectUnitComponent @bind-Model=@ProcessCondition.SpecificEnthalpy UpdateParent=DialogParent.Validateform></SelectUnitComponent>
            <SelectUnitComponent @bind-Model=@ProcessCondition.EnthalpyFlow UpdateParent=DialogParent.Validateform></SelectUnitComponent>
            <SelectUnitComponent @bind-Model=@ProcessCondition.Viscosity UpdateParent=DialogParent.Validateform></SelectUnitComponent>
            <SelectUnitComponent @bind-Model=@ProcessCondition.ThermalConductivity UpdateParent=DialogParent.Validateform></SelectUnitComponent>
            </MudStack>
        </MudItem>
    </MudGrid>
}
@code {
    bool assign = true;
}
