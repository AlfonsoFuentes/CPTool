@using CPTool.Application.Features.ChapterFeatures.CreateEdit

@if (assign)
{
    <MudGrid>
        <MudItem xs="12" sm="12" Class="pa-4">


            <SelectComponent T="EditChapter"
                         Elements=@GlobalTables.Chapters
                         Label="Chapter"
                         SelectionChanged="Model.AssignInternalItem"
                         Disable=@(Model.Chapter?.Id==0?false:true)
                         @bind-Value="@Model.Chapter">
            </SelectComponent>

            <FieldComponent Label="Nomenclatore" Value="@Model.Nomenclatore"></FieldComponent>
            <TextComponent @bind-Model="@Model" Label="Item Name" Disable=false PropertyName="@nameof(Model.Name)"
                       Validation="@(new Func<string,string>(DialogParent.AnyName))"
                       Required=true></TextComponent>


           

        </MudItem>
    </MudGrid>
}


@code {
    bool assign = true;

}
