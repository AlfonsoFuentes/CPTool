@page "/"
@page "/mwolist"


@if (ShowAddButton)
{
    <SimpleListComponent TMaster="EditMWO"
                     TDeleteMaster="DeleteMWO"
                     TMasterList="GetMWOListQuery"
                     TGedById="GetByIdMWOQuery"
                     @bind-ElementsMasters="@GlobalTables.MWOs"
                     ElementsMastersSelected="@GlobalTables.MWOs"
                     @bind-SelectedMaster="@SelectedMaster"
                     OnExcel="OnExcel"
                     OnShowDialogMaster="ToolDialogService.ShowMWO">

        <MasterOtherButtons>
            <MudTooltip Text="Items for MWO">
                <MudIconButton Icon="@Icons.Filled.Agriculture" OnClick="GoToMWOItemList" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
            <MudTooltip Text="Purchase Orders">
                <MudIconButton Icon="@Icons.Filled.CurrencyExchange" OnClick="GoToPurchaseOrderList" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
            <MudTooltip Text="Create Task">
                <MudIconButton Icon="@Icons.Filled.AddTask" OnClick="CreateTaskMWO" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
            <MudTooltip Text="User Requirements">
                <MudIconButton Icon="@Icons.Filled.FollowTheSigns" OnClick="GoToUserRequirmentPage" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
            <MudTooltip Text="Signals">
                <MudIconButton Icon="@Icons.Filled.ElectricalServices" OnClick="GoToUserSignalList" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
            <MudTooltip Text="Control Loops">
                <MudIconButton Icon="@Icons.Filled.Loop" OnClick="GoToControlLoopList" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
        </MasterOtherButtons>

        <MasterContextTh>
            <MudTh>#</MudTh>
            <MudTh>Name</MudTh>
            <MudTh>CEC#</MudTh>
            <MudTh>Budget, USD</MudTh>
            <MudTh>Expenses, USD</MudTh>
            <MudTh>Assigned, USD</MudTh>
            <MudTh>Actual, USD</MudTh>
            <MudTh>Commitment, USD</MudTh>
            <MudTh>Pending, USD</MudTh>
        </MasterContextTh>
        <MasterContextTd>
            <MudTd DataLabel="#">@context.Id</MudTd>
            <MudTd DataLabel="Name">@context.Name</MudTd>

            <MudTd DataLabel="CEC">@context.CECName</MudTd>
            <MudTd DataLabel="Budget, USD">@context.Budget.ToString("C1")</MudTd>
            <MudTd DataLabel="Expenses, USD">@context.Expenses.ToString("C1")</MudTd>
            <MudTd DataLabel="Assigned, USD">@context.Assigned.ToString("C1")</MudTd>
            <MudTd DataLabel="Actual, USD">@context.Actual.ToString("C1")</MudTd>
            <MudTd DataLabel="Commitment, USD">@context.Commitment.ToString("C1")</MudTd>
            <MudTd DataLabel="Pending, USD">@context.Pending.ToString("C1")</MudTd>
        </MasterContextTd>


    </SimpleListComponent>

}

@code {




    public bool ShowAddButton { get; set; } = true;


    int mastersm => 6;
    int detailsm => 6;
}
