@page "/"
@page "/mwolist"


@if (ShowAddButton)
{
    <SimpleListComponent TMaster="EditMWO"
                     TDeleteMaster="DeleteMWO"
                     TMasterList="GetMWOListQuery"
                     TGedById="GetByIdMWOQuery"
                     @bind-ElementsMasters="@GlobalTables.MWOs"
                     @bind-SelectedMaster="@SelectedMaster"
                     OnShowDialogMaster="ToolDialogService.ShowMWO">

        <MasterOtherButtons>
            <MudTooltip Text="Items for MWO">
                <MudIconButton Icon="@Icons.Filled.Agriculture" OnClick="GoToMWOItemList" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
            <MudTooltip Text="Create Purchase Order">
                <MudIconButton Icon="@Icons.Filled.CurrencyExchange" OnClick="AddPurchaseOrder" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
            <MudTooltip Text="Create Task">
                <MudIconButton Icon="@Icons.Filled.AddTask" OnClick="CreateTaskMWO" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
            <MudTooltip Text="User Requirements">
                <MudIconButton Icon="@Icons.Filled.FollowTheSigns" OnClick="GoToUserRequirmentPage" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
            <MudTooltip Text="Signals">
                <MudIconButton Icon="@Icons.Filled.ElectricalServices" OnClick="GoToUserSignalList" Size="Size.Small" Disabled=@(SelectedMaster.Id==0?true:false) />
            </MudTooltip>
        </MasterOtherButtons>

        <MasterContextTh>
            <MudTh Style="width:40px">#</MudTh>
            <MudTh Style="width:40px">Name</MudTh>
            <MudTh Style="width:40px">CEC#</MudTh>
            <MudTh Style="width:40px">Budget, USD</MudTh>
            <MudTh Style="width:40px">Expenses, USD</MudTh>
            <MudTh Style="width:40px">Assigned, USD</MudTh>
        </MasterContextTh>
        <MasterContextTd>
            <MudTd DataLabel="#">@context.Id</MudTd>
            <MudTd DataLabel="Name">@context.Name</MudTd>

            <MudTd DataLabel="CEC">@context.CECName</MudTd>
            <MudTd DataLabel="Budget, USD">@context.Budget.ToString("C1")</MudTd>
            <MudTd DataLabel="Budget, USD">@context.Expenses.ToString("C1")</MudTd>
            <MudTd DataLabel="Budget, USD">@context.Assigned.ToString("C1")</MudTd>
        </MasterContextTd>


    </SimpleListComponent>

}

@code {




    public bool ShowAddButton { get; set; } = true;


    int mastersm => 6;
    int detailsm => 6;
}
