@page "/"
@page "/mwolist"
@using CPTool.Application.Features.MWOItemFeatures.Query.GetById
<PageTitle> CP Tool</PageTitle>
@if (ShowAddButton)
{
    <OneToManyListComponent TMaster="AddEditMWOCommand" TDetail="AddEditMWOItemCommand"
                        TDeleteMaster="DeleteMWOCommand" TDeleteDetail="DeleteMWOItemCommand"
                        TMasterList="GetMWOListQuery" TDetailList="GetMWOItemListQuery"
                        TMasterGedById="GetByIdMWOQuery" TDetailGedById="GetByIdMWOItemQuery"
                        @bind-ElementsMasters="@GlobalTables.MWOs"
                        ElementsDetails="@SelectedMaster.MWOItemsCommand"
                        @bind-SelectedMaster="@SelectedMaster"
                        @bind-SelectedDetail="@SelectedDetail"
                        OnShowDialogMaster="ToolDialogService.ShowMWO"
                        OnShowDialogDetails="ToolDialogService.ShowMWOItem">
        <MasterContextTh>
            <MudTh Style="width:40px">#</MudTh>
            <MudTh Style="width:40px">Name</MudTh>
            <MudTh Style="width:40px">CEC#</MudTh>
        </MasterContextTh>
        <MasterContextTd>
            <MudTd DataLabel="TagLetter">@context.Id</MudTd>
            <MudTd DataLabel="TagLetter">@context.Name</MudTd>
            <MudTd DataLabel="TagLetter">@context.CECName</MudTd>
        </MasterContextTd>
        <DetailContextTh>
            <MudTh Style="width:40px">#</MudTh>
            <MudTh Style="width:40px">Tag</MudTh>
            <MudTh Style="width:40px">Name</MudTh>

        </DetailContextTh>
        <DetailContextTd>
            <MudTd DataLabel="TagLetter">@context.Id</MudTd>
            <MudTd DataLabel="TagLetter">@context.TagId</MudTd>
            <MudTd DataLabel="TagLetter">@context.Name</MudTd>

        </DetailContextTd>

    </OneToManyListComponent>

}

@code {




    public bool ShowAddButton { get; set; } = true;


    int mastersm => 6;
    int detailsm => 6;
}
