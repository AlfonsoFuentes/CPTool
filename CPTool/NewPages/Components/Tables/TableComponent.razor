@typeparam T
@if (debug)
{
    <MudTable T="T"
          @ref="@mudTable"
          Breakpoint="Breakpoint.Sm"
          Items="@Elements"
          Dense="@dense"
          Hover="@hover"
          Bordered="@bordered"
          FixedHeader="true"
          FixedFooter="true"
          Striped="@striped"
          OnRowClick="OnRowClicked"
          Loading=@Loading
          ReadOnly=true
          Filter="new Func<T,bool>(FilterFunc1)"
          @bind-SelectedItem="@SelectedItem">

          
        <ToolBarContent>
           

          
            <ToolBarComponent ShowAddButton=@ShowAddButton
                          ShowReportButtons=@ShowReportButtons
                          DisableEditButton=@DisableEditButton
                          DisableAddButton=@DisableAddButton
                          ShowDeleteButton=@ShowDeleteButton
                          ShowEditButton=@ShowEditButton
                          OnAdd="OnAdd"
                          OnDelete="OnDelete"
                          OnEdit="OnEdit"
                          OnPrint="OnPrint"
                          OnPDF="OnPDF"
                          SelectedItemName="@SelectedItemName"
                          OnExcel="OnExcel">
                <OtherButtons>
                    @OtherButtons
                </OtherButtons>

           

            </ToolBarComponent>

         
            <MudSpacer />
            @if (ShowFinderText)
            {
                <MudTextField @bind-Value="searchString1"
                      Placeholder="Search"
                      Adornment="Adornment.Start"
                      Immediate="true"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"
                      Class="mt-0">
                </MudTextField>
            }

        </ToolBarContent>
        <ColGroup>
            <col style="width: 1%;" />
        </ColGroup>
        <HeaderContent>
            @ContextTh
        </HeaderContent>
        <RowTemplate>
            @ContextTd!(context)
        </RowTemplate>
        <FooterContent>
            @FooterContent
        </FooterContent>

        <PagerContent>
            <MudTablePager PageSizeOptions="new int[]{25, 50, 100}" />
        </PagerContent>
    </MudTable>
}

@code {
    bool debug = true;
    private MudTable<T> mudTable;

    private bool hover = true;
    private bool striped = true;
    private bool bordered = true;
    private string searchString1 = "";
    private bool dense = true;
    [Parameter]
    public bool ShowAddButton { get; set; } = true;
    [Parameter]
    public bool DisableAddButton { get; set; } = false;
    [Parameter]
    public bool DisableEditButton { get; set; } = false;
    [Parameter]
    public bool ShowDeleteButton { get; set; } = true;
    [Parameter]
    public bool ShowReportButtons { get; set; } = true;
    [Parameter]
    public bool ShowFinderText { get; set; } = true;
    [Parameter]
    public bool ShowEditButton { get; set; } = true;
}
