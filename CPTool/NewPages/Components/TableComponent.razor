@typeparam T
@if (ShowAddButton)
{
    <MudTable T="T"
          @ref="mudTable"
          Breakpoint="Breakpoint.Sm"
          Items="@Elements"
          Dense="@dense"
          Hover="@hover"
          Bordered="@bordered"
          Striped="@striped"
          OnRowClick="OnRowClicked"
        
          ReadOnly=true
          Filter="new Func<T,bool>(FilterFunc1)"
          @bind-SelectedItem="@SelectedItem">
        <ToolBarContent>
            @SelectedItem.Name
            <ToolBarComponent ShowAddButton=@ShowAddButton
                          DisableEditButton=@DisableEditButton
                          DisableAddButton=@DisableAddButton
                          OnAdd="OnAdd"
                          OnDelete="OnDelete"
                          OnEdit="OnEdit">
                <OtherButtons>
                    @OtherButtons
                </OtherButtons>
            </ToolBarComponent>


            <MudSpacer />
            <MudTextField @bind-Value="searchString1"
                      Placeholder="Search"
                      Adornment="Adornment.Start"
                      Immediate="true"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"
                      Class="mt-0">
            </MudTextField>
        </ToolBarContent>
        <HeaderContent>
            @ContextTh

        </HeaderContent>
        <RowTemplate>
            @ContextTd!(context)
        </RowTemplate>

        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
}

@code {
    private MudTable<T> mudTable;
    private bool hover = true;
    private bool striped = true;
    private bool bordered = true;
    private string searchString1 = "";
    private bool dense = true;
    [Parameter]
    public bool ShowAddButton { get; set; } = true;
    [Parameter]
    public bool DisableAddButton { get; set; } = false;
    [Parameter]
    public bool DisableEditButton { get; set; } = false;
    private int selectedRowNumber = -1;
    
}
