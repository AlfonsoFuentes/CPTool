@inherits CancellableComponent
<MudDialog>
    <DialogContent>
        <MudForm Model="Model" @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <ComponentAutoComplete Label="Supplier"
                                   TDTO="SupplierDTO"
                                   T="Supplier"
                                   Manager=TablesService.ManSupplier
                                   ObjectList=TablesService.ManSupplier.List
                                   ShowDialogOverrided=@((dto)=>ToolDialogService.ShowSupplierDialog(Model))
                                   @bind-Model=@Model.SupplierDTO
                                   @bind-ModelInt=@Model.SupplierDTO.Id></ComponentAutoComplete>



            <MudTextField @bind-Value="Model.BrandDTO.Name"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Immediate="true"
                          Label="Brand Name" />

            <MudSelect Dense="true"
                       Margin="Margin.Dense"
                       T="BrandType"
                       Label="Select Brand or Service"
                       AnchorOrigin="Origin.BottomCenter"
                       
                       Value=@Model.BrandDTO.BrandType
                       Variant="Variant.Outlined"
                     >
                @foreach (var item in Enum.GetValues<BrandType>())
                {
                    <MudSelectItem Value="item">@item</MudSelectItem>
                }
                <MudTextField @bind-Value="Model.BrandDTO.Name"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Immediate="true"
                              Label="Brand Name" />
            </MudSelect>


        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {

    public IMask mask1 = new RegexMask(@"^[0-9]\d{0,4}$");
    bool success;
    string[] errors = { };
}
