@inherits CancellableComponent
<MudGrid>
    <MudItem xs="12" sm="12" Class="pa-4">


        <ComponentAutoComplete Label="Unitary prize unit"
                               TDTO="UnitaryBasePrizeDTO"
                               T="UnitaryBasePrize"
                               Manager=TablesService.ManUnitaryPrize
                               ObjectList=TablesService.ManUnitaryPrize.List
                               @bind-ModelInt="Model.UnitaryBasePrizeId"
                               @bind-Model=@Model.UnitaryBasePrizeDTO
                               Required="true"
                               RequiredError="Must submit Unitary prize"></ComponentAutoComplete>
        <MudTextField T="decimal" @bind-Value="Model.UnitaryPrize"
                      Immediate="true"
                      InputMode="InputMode.numeric"
                      Label="Unitary prize"
                      Validation="@(new Func<double, string>(ValidateUnitaryPrize))"
                      Format="C"
                      Margin="Margin.Dense"
                      Variant="Variant.Outlined"></MudTextField>

        <MudTextField T="decimal" @bind-Value="Model.Quantity"
                      Immediate="true"
                      InputMode="InputMode.numeric"
                      Label="Quantity"
                      Variant="Variant.Outlined"
                      Margin="Margin.Dense"
                      Validation="@(new Func<double, string>(ValidateQuantity))"></MudTextField>


        <MudTextField T="string" Value="@(Model.BudgetPrize.ToString())"
                      Adornment="@Adornment.Start"
                      AdornmentIcon=@Icons.Material.Filled.AttachMoney
                      Format="C"
                      Disabled="true"
                      Margin="Margin.Dense"
                      Variant="Variant.Outlined"
                      Label="Budget Prize, USD"></MudTextField>
    </MudItem>
</MudGrid>

