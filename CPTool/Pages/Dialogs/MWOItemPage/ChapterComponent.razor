<MudGrid>
    <MudItem xs="12" sm="12" Class="pa-4">
        <ComponentSelect TDTO="ChapterDTO"
                        
                         Label="Chapter"
                         Disable="@(Model.ChapterDTO.Id==0?false:true)"
                        
                         PostEvent=OnChapterChanged
                         Elements=TablesService.ManChapter.List
                         Required=true
                         Validation="@(new Func<int, string>(ItemChapter))"
                         @bind-Model=@Model.ChapterDTO>


        </ComponentSelect>

       
      <MudTextField T="string" Value="Model.Nomenclatore"
                      Immediate="true"
                      Disabled="true"
                      Margin="Margin.Dense"
                      Variant="Variant.Outlined"
                      Label="Nomenclatore" />
        <MudTextField T="string" @bind-Value="Model.Name"
                      Immediate="true"
                      Required="true"
                      Margin="Margin.Dense"
                      Variant="Variant.Outlined"
                      Disabled="@(Model.ChapterDTO.Id==0?true:false)"
                      Validation="@(new Func<string,string>(AnyName))"
                      Label="item Name" />
    
    </MudItem>
</MudGrid>

