@inherits CancellableComponent
@if (test)
{
    <ComponentBaseDialog TDTO="MWOItemDTO" Model="@Model" FuncOnInitialize="OnInit">
        <Components>
            <CascadingValue Value="this">
                <MudGrid>
                    <MudItem xs="12">

                        <MudToolBar>
                            <MudButton Variant="Variant.Outlined" OnClick="ViewName" Size="Size.Small" Color="Color.Primary"> Name</MudButton>
                            <MudButton Variant="Variant.Outlined" OnClick="ViewSpecs" Size="Size.Small" Color="Color.Primary">Specs</MudButton>
                            @if (Model.ChapterId == 4 || Model.ChapterId == 7)
                            {
                                <MudButton Variant="Variant.Outlined" OnClick="ViewMaterials" Size="Size.Small" Color="Color.Primary">Materials</MudButton>
                            }
                        </MudToolBar>

                    </MudItem>

                    <MudItem xs="12">

                        @if (bViewName)
                        {

                            <MudGrid>

                                <MudItem xs="12" sm="6">
                                    <ChapterComponent></ChapterComponent>
                                </MudItem>
                                <MudItem xs="12" sm="6">
                                    <ExpenseComponent></ExpenseComponent>
                                </MudItem>

                            </MudGrid>

                        }
                        @if (bViewSpecs)
                        {
                            @switch (Model.ChapterDTO.Id)
                            {
                                case 4:
                                    <EquipmentItemPage></EquipmentItemPage>
                                    break;
                                case 6:
                                    <PipingtItemPage></PipingtItemPage>
                                    break;
                                case 7:
                                    <InstrumentItemPage></InstrumentItemPage>
                                    break;
                            }

                        }
                        @if (bViewMaterials)
                        {
                            @switch (Model.ChapterDTO.Id)
                            {
                                case 4:
                                    <MaterialsComponent Model="@Model.EquipmentItemDTO.MaterialsGroupDTO"></MaterialsComponent>
                                    break;
                                case 7:
                                    <MaterialsComponent Model="@Model.InstrumentItemDTO.MaterialsGroupDTO"></MaterialsComponent>
                                    break;
                            }
                        }

                    </MudItem>

                </MudGrid>
            </CascadingValue>
        </Components>
    </ComponentBaseDialog>

}

@code {

    bool test = true;
    //Justify _justify = Justify.Center;
}
