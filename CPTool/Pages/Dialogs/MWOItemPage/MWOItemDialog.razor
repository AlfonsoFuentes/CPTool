@inherits CancellableComponent
@if (test)
{
    <ComponentBaseDialog TDTO="MWOItemDTO" Model="@Model" FuncOnInitialize="OnInit">
        <Components>
            <CascadingValue Value="this">
                <MudGrid>
                    <MudItem xs="12">
                       
                            <MudToolBar>
                                <MudButton Variant="Variant.Outlined" OnClick="ViewName" Size="Size.Small"> Name</MudButton>
                                <MudButton Variant="Variant.Outlined" OnClick="ViewSpecs" Size="Size.Small">Specs</MudButton>
                            </MudToolBar>
                       
                    </MudItem>

                    <MudItem xs="12">
                       
                            @if (bViewName)
                            {

                                <MudGrid>

                                    <MudItem xs="12" sm="6">
                                        <ChapterComponent></ChapterComponent>
                                    </MudItem>
                                    <MudItem xs="12" sm="6">
                                        <ExpenseComponent></ExpenseComponent>
                                    </MudItem>

                                </MudGrid>

                            }
                            @if (bViewSpecs)
                            {
                                @switch (Model.ChapterDTO.Id)
                                {
                                    case 4:
                                        <EquipmentItemPage></EquipmentItemPage>
                                        break;
                                }



                            }
                     
                    </MudItem>

                </MudGrid>
            </CascadingValue>
        </Components>
    </ComponentBaseDialog>

}

@code {

    bool test = true;
    //Justify _justify = Justify.Center;
}
