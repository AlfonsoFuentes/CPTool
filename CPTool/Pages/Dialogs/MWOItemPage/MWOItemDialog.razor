@inherits CancellableComponent
@*@if (test)
{
    <ComponentBaseDialog @ref=@basedialog TDTO="MWOItemDTO" Model="@Model" FuncOnInitialize="OnInit" >
        <Components>
            <CascadingValue Value="this">
                <MudGrid>
                    <MudItem xs="12">

                        <MudToolBar>
                            <MudButton Variant="Variant.Outlined" OnClick="ViewName" Size="Size.Small" Color="Color.Primary"> Name</MudButton>

                            @if (Model.ChapterDTO?.Id == 4 || Model.ChapterDTO?.Id == 7)
                            {
                                <MudButton Variant="Variant.Outlined" OnClick="ViewSpecs" Size="Size.Small" Color="Color.Primary">Specs</MudButton>
                                <MudButton Variant="Variant.Outlined" OnClick="ViewMaterials" Size="Size.Small" Color="Color.Primary">Materials</MudButton>
                                <MudButton Variant="Variant.Outlined" OnClick="ViewNozzles" Size="Size.Small" Color="Color.Primary">Nozzles</MudButton>
                            }
                        </MudToolBar>

                    </MudItem>

                    <MudItem xs="12">

                        @if (bViewName)
                        {

                            <MudGrid>

                                <MudItem xs="12" sm="6">
                                    <ChapterComponent></ChapterComponent>
                                </MudItem>
                                <MudItem xs="12" sm="6">
                                    <ExpenseComponent></ExpenseComponent>
                                </MudItem>

                            </MudGrid>

                        }
                        @if (bViewSpecs)
                        {
                            @switch (Model.ChapterDTO?.Id)
                            {
                                case 4:
                                    <EquipmentItemPage></EquipmentItemPage>
                                    break;
                                case 6:
                                    <PipingtItemPage></PipingtItemPage>
                                    break;
                                case 7:
                                    <InstrumentItemPage></InstrumentItemPage>
                                    break;
                            }

                        }
                        @if (bViewMaterials)
                        {
                           
                        }
                        @if (bNozzles)
                        { 
                            @switch (Model.ChapterDTO?.Id)
                            {
                                case 4:
                                    <ComponentTableList TDTO="NozzleDTO" T="Nozzle" TableName="Nozzles in Equipment" 
                                        OnShowDialogOverrided="ToolDialogService.ShowNozzleDialog"
                                        Elements="@Model.EquipmentItemDTO.NozzlesDTO" ></ComponentTableList>

                      
                                    break;
                                case 7:
                                    <ComponentTableList TDTO="NozzleDTO" T="Nozzle" TableName="Nozzles in Equipment"
                                         Elements="@Model.InstrumentItemDTO.NozzlesDTO" ></ComponentTableList>
                                    break;
                            }
                        }

                    </MudItem>

                </MudGrid>
            </CascadingValue>
        </Components>
    </ComponentBaseDialog>

}*@

