<MudDialog>
    <DialogContent>
        <CascadingValue Value="Model">
            <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-2">

                    <MudTabPanel Text="Name">
                        <MudGrid>
                            <MudItem xs="12" sm="6">
                                <ChapterComponent></ChapterComponent>
                            </MudItem>
                            <MudItem xs="12" sm="6">
                                <ExpenseComponent></ExpenseComponent>
                            </MudItem>
                        </MudGrid>
                    </MudTabPanel>

                    <MudTabPanel Text="Specs">
                        @if (Model.ChapterDTO.Id == 4)
                        {
                            <EquipmentItemPage @ref=@EquipmentItemPage></EquipmentItemPage>
                        }
                    </MudTabPanel>
                </MudTabs>
            </MudForm>
        </CascadingValue>

    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="Submit">Save</MudButton>
        <MudButton Variant="Variant.Filled" DisableElevation="true" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>
@code {
    bool success;
    string[] errors = { };
}
