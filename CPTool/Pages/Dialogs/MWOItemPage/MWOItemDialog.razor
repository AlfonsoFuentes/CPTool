@if (test)
{
    <ComponentBaseDialog TDTO="MWOItemDTO" Model="@Model">
        <Components>
            <CascadingValue Value="this">
                <MudStack Justify="@_justify">
                    <MudPaper Height="60px" Width="100%">
                        <MudToolBar>
                            <MudButton Variant="Variant.Filled" OnClick="ViewName" Size="Size.Small"> Name</MudButton>
                            <MudButton Variant="Variant.Filled" OnClick="ViewSpecs" Disabled=@(!bViewButtonSpecs) Size="Size.Small">Specs</MudButton>
                        </MudToolBar>
                    </MudPaper>

                    @if (bViewName)
                    {

                        <MudPaper Height="320px" Width="100%">
                            <MudGrid>

                                <MudItem xs="12" sm="6">
                                    <ChapterComponent></ChapterComponent>
                                </MudItem>
                                <MudItem xs="12" sm="6">
                                    <ExpenseComponent></ExpenseComponent>
                                </MudItem>

                            </MudGrid>
                        </MudPaper>

                    }
                    @if (bViewSpecs)
                    {

                        <MudPaper Height="320px" Width="100%">
                            <EquipmentItemPage Visible=@bEquipmentVisible @ref="EquipmentItemPage"></EquipmentItemPage>
                        </MudPaper>

                    }
                </MudStack>
            </CascadingValue>
        </Components>
    </ComponentBaseDialog>
    
}

@code {
  
    bool test = true;
    Justify _justify = Justify.Center;
}
