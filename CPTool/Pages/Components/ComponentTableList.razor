@typeparam TDTO
@typeparam T

@inherits CancellableComponent
<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h6">@TableName</MudText>
        <MudText Inline="true" Class="align-self-left">Row Selected: @SelectedItem?.Name</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudTable T="TDTO"
                  Breakpoint="Breakpoint.Sm"
                  Items="@Elements"
                  Dense="@dense"
                  Hover="@hover"
                  Bordered="@bordered"
                  Striped="@striped"
                  OnRowClick="RowClickEvent"
                  Filter="new Func<TDTO,bool>(FilterFunc1)"
                  @bind-SelectedItem="@SelectedItem">
            <ToolBarContent>

                <ComponentToolbar T="TDTO"
                                  SelectedItem="@SelectedItem"
                                  OnAdd="Add"
                                  OnDelete="Delete"
                                  OnEdit="Edit"
                                  OnExcel="Excel"
                                  OnPDF="PDF"
                                  OnPrint="Print">
                    <OtherButtons>
                        @OtherButtons
                    </OtherButtons>
                </ComponentToolbar>
                <MudSpacer />
                <MudTextField @bind-Value="searchString1"
                              Placeholder="Search"
                              Adornment="Adornment.Start"
                              Immediate="true"
                              AdornmentIcon="@Icons.Material.Filled.Search"
                              IconSize="Size.Medium"
                              Class="mt-0">
                </MudTextField>
            </ToolBarContent>
            <HeaderContent>
                @ContextTh

            </HeaderContent>
            <RowTemplate>
                @ContextTd(context)
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>

    </MudItem>

</MudGrid>


