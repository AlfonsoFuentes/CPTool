@typeparam TDTO
@typeparam T
@inherits CancellableComponent

<PageTitle>@TableName</PageTitle>
<ComponentTableList @ref="table" TDTO="TDTO"
                    SelectedItem="@Selected" 
                    T="T"
                    SearchFunc=@SearchFunc
                    ShowAddButton=@ShowAddButton
                    TableName=@TableName
                    Elements="@Elements"
                    OnShowDialogOverrided=ShowDialogOverrided>
    <ContextTh>
        <MudTh Style="width:40px">#</MudTh>
        <MudTh>Name</MudTh>
        @ContextTh
    </ContextTh>
    <ContextTd>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        @ContextTd(context)
    </ContextTd>
</ComponentTableList>

@code {
    [Parameter]
    public bool ShowAddButton { get; set; } = true;

}

