@using CPTool.ApplicationCQRS.Features.PurchaseOrders.Commands.CreateUpdate;
<TableTemplate T="CommandPurchaseOrder"
               ShowToolBar=true
               ShowAdd=true
               ShowDelete=false
               ShowEdit=true
               ShowReport=true
               Elements="@DialogData.PurchaseOrders"
               ShowDialog="@ShowTableDialog">
    
    <Columns>
        <RadzenDataGridColumn TItem="CommandPurchaseOrder" Title="PO#" Property="@(nameof(CommandPurchaseOrder.PONumber))" TextAlign="TextAlign.Left" Filterable=true Sortable=true>

        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandPurchaseOrder" Title="PR#" Property="@(nameof(CommandPurchaseOrder.PurchaseRequisition))" TextAlign="TextAlign.Left" Filterable=true Sortable=true>

        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandPurchaseOrder" Title="Name" Property="@(nameof(CommandPurchaseOrder.Name))" TextAlign="TextAlign.Left" Width="200px" Filterable=true Sortable=true>

        </RadzenDataGridColumn>


        <RadzenDataGridColumn TItem="CommandPurchaseOrder" Title="Status" Property="@(nameof(CommandPurchaseOrder.PurchaseOrderApprovalStatusName))" Filterable=true Sortable=true>


        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandPurchaseOrder" Property="@(nameof(CommandPurchaseOrder.SupplierName))" Title="Supplier" Filterable=true Sortable=true>

        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandPurchaseOrder" Title="PO Value" Filterable=false Sortable=false>
            <Template>
                @context.PrizeCurrency.ToString("C0")
            </Template>


        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandPurchaseOrder" Title="PO Value, USD" Filterable=false Sortable=false>
            <Template>
                @context.PrizeUSD.ToString("C0")
            </Template>

        </RadzenDataGridColumn>


    </Columns>
</TableTemplate>

