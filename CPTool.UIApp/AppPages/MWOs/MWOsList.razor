@page "/mwos"
@using CPTool.ApplicationCQRS.Features.MWOs.Commands.CreateUpdate;

<PageTitle>@($"Mechanical Work Orders")</PageTitle>

@if (debug)
{

}

<TableTemplate T="CommandMWO"
            
               @bind-SelectedItem=@SelectedItem
               ShowDialog="ShowTableDialog"
               OnDelete="@Delete"
               Elements="@Elements" Export="@Export">
    <ToolBarButtons>
        <ButtonTemplate Icon="agriculture"
                        Disabled=@DisableEdit
                        Click=GoToMWOItemList
                        ToolTip="Items for MWO">

        </ButtonTemplate>
      
        <ButtonTemplate Icon="add_task"
                        Disabled=@DisableEdit
                        Click=CreateTaskMWO
                        ToolTip="Create Task">

        </ButtonTemplate>
     

    </ToolBarButtons>
    <Columns>
        <RadzenDataGridColumn TItem="CommandMWO" Property="@nameof(CommandMWO.Name)" Title="Name" TextAlign="TextAlign.Left">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandMWO" Property="@nameof(CommandMWO.CECName)" Title="CEC Name" TextAlign="TextAlign.Left">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandMWO" Property="@nameof(CommandMWO.ProjectLeaderName)" Title="Project Leader" TextAlign="TextAlign.Left">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandMWO" Property="@nameof(CommandMWO.BudgetValue)" Title="Budget, USD" Filterable=false Sortable=false>
           
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandMWO" Property="@nameof(CommandMWO.ExpensesValue)" Title="Expenses, USD" Filterable=false Sortable=false>
           
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandMWO" Property="@nameof(CommandMWO.AssignedValue)" Title="Assigned, USD" Filterable=false Sortable=false>
           
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandMWO" Property="@nameof(CommandMWO.ActualValue)" Title="Actual, USD" Filterable=false Sortable=false>
          
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandMWO" Property="@nameof(CommandMWO.CommitmentValue)" Title="Commitment, USD" Filterable=false Sortable=false>
          
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="CommandMWO" Property="@nameof(CommandMWO.PendingValue)" Title="Pending, USD" Filterable=false Sortable=false>
          
        </RadzenDataGridColumn>
    </Columns>
</TableTemplate>

@code {
    bool debug = true;
  

  
