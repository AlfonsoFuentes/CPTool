@inject TooltipService tooltipService

<RadzenButton Variant="Variant.Outlined" style="margin-bottom: 10px"
              Shade="Shade.Lighter"
              Disabled=Disabled
              Icon=@Icon
              Text="@Text"
              Visible=@Visible
              MouseEnter="@(args => ShowTooltip(args) )"
              Click=@Click
              Size="ButtonSize.ExtraSmall" />

@code {
    [Parameter]
    public bool Disabled { get; set; } = false;
    [Parameter]
    public string Icon { get; set; } = "";

    [Parameter]
    public EventCallback Click { get; set; }
    [Parameter]
    public string Text { get; set; } = "";
    [Parameter]
    public string ToolTip { get; set; } = "";

    void ShowTooltip(ElementReference elementReference, TooltipOptions options = null!)
    {
        if (ToolTip != "")
            tooltipService.Open(elementReference, ToolTip, options);
    }
    [Parameter]
    public bool Visible { get; set; } = true;

}
