@using CPTool.Domain.Enums;
<DialogTemplate Model="@Model" Save="@Save">
    <ChildContent>
        <CascadingValue Value="this">
            <RadzenCard Class="m-3">
                <SelectEnumTemplate T="ControlLoopType" Elements="Enum.GetValues<ControlLoopType>()" Label="Select  Control Loop Type"
                                    @bind-Value=@Model.ControlLoopType>

                </SelectEnumTemplate>
            </RadzenCard>
           
                @switch (Model.ControlLoopType)
                {
                    case ControlLoopType.PIDControl:
                        <ControlLoopPIDDialog></ControlLoopPIDDialog>
                        break;
                    case ControlLoopType.ON_OFF_Control:
                        <ControlLoopONOFFDialog></ControlLoopONOFFDialog>
                        break;
                    case ControlLoopType.Interlock:
                        <ControlLoopInterlockDialog></ControlLoopInterlockDialog>
                        break;
                    case ControlLoopType.Alarm:
                        <ControlLoopAlarmDialog></ControlLoopAlarmDialog>
                        break;
                }
        
        </CascadingValue>
    </ChildContent>

</DialogTemplate>

