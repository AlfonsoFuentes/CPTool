@using CPTool.Application.Features.PipeDiameterFeatures.CreateEdit;


@inherits TableTemplate<EditPipeDiameter>
<TableTemplate T="EditPipeDiameter"
                Filter="@(x => x.dPipeClassId == ParentId)"
                DisableAdd=@(ParentId==0)
                @bind-SelectedItem=@SelectedItem
                ShowDialog="ShowTableDialog"
                @bind-GlobalElements="@GlobalElements">

    <Columns>
        <RadzenDataGridColumn TItem="EditPipeDiameter" Property="@nameof(EditPipeDiameter.Name)" Title="Name" TextAlign="TextAlign.Left" Filterable=false Sortable=false>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="EditPipeDiameter" Title="OD" TextAlign="TextAlign.Left" Filterable=false Sortable=false>
            <Template>
                @context.OuterDiameter.StringValue
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="EditPipeDiameter" Title="ID" TextAlign="TextAlign.Left" Filterable=false Sortable=false>
            <Template>
                @context.InternalDiameter.StringValue
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="EditPipeDiameter" Title="Thicknes" TextAlign="TextAlign.Left" Filterable=false Sortable=false>
            <Template>
                @context.Thickness.StringValue
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</TableTemplate>
