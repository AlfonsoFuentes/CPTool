@using CPTool.Application.Features.ProcessFluidFeatures.CreateEdit;
<Panel>
    <Left>
        <RadzenCard>
            <SelectTemplate T="EditProcessFluid"
                            Elements=@RadzenTables.ProcessFluids
                            Label="Process Fluid"
                            PropertyName="Name"
                            Model="@ProcessFluid">


            </SelectTemplate>

            <SelectUnitTemplate Label="Temperature" @bind-Model=@ProcessCondition.Temperature Change="OnChangeTemperaturePressure"></SelectUnitTemplate>
            <SelectUnitTemplate Label="Pressure" @bind-Model=@ProcessCondition.Pressure Change="OnChangeTemperaturePressure"></SelectUnitTemplate>
            <SelectUnitTemplate Label="Mass Flow" @bind-Model=@ProcessCondition.MassFlow
                                Change="OnChangeMassFlow"></SelectUnitTemplate>
            <SelectUnitTemplate Label="Volumetric Flow" @bind-Model=@ProcessCondition.VolumetricFlow
                                Change="OnChangeVolumetricFlow"></SelectUnitTemplate>
            <SelectUnitTemplate Label="Density" @bind-Model=@ProcessCondition.Density Disable="true"></SelectUnitTemplate>

            <SelectUnitTemplate Label="Specific Cp" @bind-Model=@ProcessCondition.SpecificCp Disable="true"></SelectUnitTemplate>
            <SelectUnitTemplate Label="Specific Enthalpy" @bind-Model=@ProcessCondition.SpecificEnthalpy Disable="true"></SelectUnitTemplate>
            <SelectUnitTemplate Label="Enthalpy Flow" @bind-Model=@ProcessCondition.EnthalpyFlow Disable="true"></SelectUnitTemplate>
            <SelectUnitTemplate Label="Viscosity" @bind-Model=@ProcessCondition.Viscosity Disable="true"></SelectUnitTemplate>
            <SelectUnitTemplate Label="Thermal Conductivity" @bind-Model=@ProcessCondition.ThermalConductivity Disable="true"></SelectUnitTemplate>

        </RadzenCard>
    </Left>
</Panel>


