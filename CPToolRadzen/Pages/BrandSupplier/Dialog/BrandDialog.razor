@using CPTool.Application.Features.BrandFeatures.CreateEdit;
@using CPTool.Application.Features.BrandSupplierFeatures.CreateEdit;
@using CPTool.Application.Features.SupplierFeatures.CreateEdit;
@using CPTool.Domain.Entities;


@inherits DialogTemplate<EditBrandSupplier>


@if (debug)
{

}
<DialogTemplate Model="@Model" Save="SaveBrand">
    <ChildContent>

        <SelectTemplate T="EditSupplier" Elements=@RadzenTables.Suppliers
                        Label="Supplier"
                        @bind-Model=@Model.Supplier
                        Required=false
                        PropertyName="Name">

        </SelectTemplate>
        <SelectEnumTemplate T="BrandType" Elements=@(Enum.GetValues<BrandType>()) Label="Type" @bind-Value=@Model.Brand.BrandType Required=true>

        </SelectEnumTemplate>

        @if (Model.Brand.BrandType != BrandType.None)
        {
            <TextBoxTemplate @bind-Value="@Model.Brand.Name" Label=@Model.Brand.BrandType.ToString()
                         StringsToCompare="@RadzenTables.Brands.Select(x=>x.Name).ToList()"
                         Required=true></TextBoxTemplate>



        }


    </ChildContent>

</DialogTemplate>

@code {

    bool debug = true;

}
