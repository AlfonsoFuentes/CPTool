@using CPTool.Application.Features.BrandFeatures.CreateEdit;
@using CPTool.Application.Features.BrandSupplierFeatures.CreateEdit;
@using CPTool.Application.Features.TaxCodeLDFeatures.CreateEdit;
@using CPTool.Application.Features.TaxCodeLPFeatures.CreateEdit;

@inherits DialogTemplate<EditBrandSupplier>
@if (debug)
{

}
<DialogTemplate Model="@Model" Save="SaveSupplier">
    <ChildContent>

        <SelectTemplate T="EditBrand" Elements=@RadzenTables.Brands
                        Label="Brand"
                        @bind-Model=@Model.Brand
                        Required=false
                        PropertyName="Name">

        </SelectTemplate>
        <TextBoxTemplate @bind-Value="@Model.Supplier.Name" Label="Supplier"
                         StringsToCompare="@RadzenTables.Suppliers.Select(x=>x.Name).ToList()"
                         Required=true></TextBoxTemplate>
        <TextBoxTemplate @bind-Value="@Model.Supplier.ContactPerson" Label="Contact person"
                         Required=true></TextBoxTemplate>
        <TextBoxTemplate @bind-Value="@Model.Supplier.Email" Label="email"
                         Required=true></TextBoxTemplate>
        <TextBoxTemplate @bind-Value="@Model.Supplier.Phone" Label="Phone"
                         Required=true></TextBoxTemplate>
        <TextBoxTemplate @bind-Value="@Model.Supplier.Address" Label="Address"
                         Required=true></TextBoxTemplate>
        <TextBoxTemplate @bind-Value="@Model.Supplier.VendorCode" Label="VendorCode"
                         StringsToCompare="@RadzenTables.Suppliers.Select(x=>x.VendorCode).ToList()"
                         Required=true></TextBoxTemplate>

        <SelectTemplate T="EditTaxCodeLD" Elements=@RadzenTables.TaxCodeLDs
                        Label="Tax Code LD"
                        @bind-Model=@Model.Supplier.TaxCodeLD
                        Required=true
                        PropertyName="Name">

        </SelectTemplate>
        <SelectTemplate T="EditTaxCodeLP" Elements=@RadzenTables.TaxCodeLPs
                        Label="Tax Code LP"
                        @bind-Model=@Model.Supplier.TaxCodeLP
                        Required=true
                        PropertyName="Name">

        </SelectTemplate>


    </ChildContent>

</DialogTemplate>

@code {

    bool debug = true;
   
}
