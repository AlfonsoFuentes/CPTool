<div style=@UISettings.RowRem class="row">
    <div class=@UISettings.ColClassLabel>
        <RadzenLabel Text="@Label" Style=@StyleBoxWidth100 class=@UISettings.ClassBox />
    </div>
    <div class=@UISettings.ColClassValue>
      
        <RadzenLabel Text="@Value" Style=@StyleBoxWidth100 class=@UISettings.ClassBox />

    </div>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public string Label { get; set; }
    [Parameter]
    public string Value { get; set; }
    public string StyleBoxWidth100 { get; set; } = "width: 100%; padding-top:2px; padding-bottom:2px";
    public string StyleBox { get; set; } = "padding-top:2px; padding-bottom:2px";
}
