@using CPTool.Application.Features.UnitFeatures.CreateEdit;


<div style="margin-bottom: 0.2rem" class="row">
    <div class="col-md-4">
        <RadzenLabel Text="@Label" Style=@StyleBoxWidth100 />
    </div>
    <div class="col-md-4">
        <RadzenNumeric ShowUpDown="false" Name="Numeric"
                       TValue=double @bind-Value=@Model.Value Format=@Format
                       Change="OnValueChanged" Style=@StyleBoxWidth100 />

        @if (Required)
        {
            <RadzenCompareValidator Value=@TargetValue Component="Numeric" Text=@RequiredText Popup=true Style="position: absolute" Operator=@compareOperator />

        }
        @if (IsRegexValidator)
        {
            <RadzenRegexValidator Component="Numeric" Text="@RegexError" Pattern="@Regex" Popup=true Style="position: absolute" />

        }

    </div>
    <div class="col-md-4">
        <RadzenDropDown AllowClear="false" TValue="CPTool.UnitsSystem.Unit" Style=@StyleBoxWidth100
                        Data=@Model.UnitsList TextProperty="Symbol" @bind-Value=@Model.Amount.Unit Name="Select"
                        Change=UnitChanged />
    </div>
</div>

@code {
    CompareOperator compareOperator = CompareOperator.NotEqual;
    public string StyleBoxWidth100 { get; set; } = "width: 100%; padding-top:2px; padding-bottom:2px";
    public string StyleBox { get; set; } = "padding-top:2px; padding-bottom:2px";
}
