@using CPTool.Application.Features.UnitFeatures.CreateEdit;


<div style="margin-bottom: 0.2rem" class="row">
    <div class="col-md-4">
        <RadzenLabel Text="@Label" Style=@UISettings.StyleBoxWidth100 class=@UISettings.ClassBox />
    </div>
    <div class="col-md-4" >
        <RadzenNumeric ShowUpDown="false" Name="Numeric" class=@UISettings.ClassBox Style=@UISettings.StyleBoxWidth100
                       TValue=double @bind-Value=@Model.Value Format=@Format
                       Change="OnValueChanged" />

       

    </div>
    <div class="col-md-4">
        <RadzenDropDown AllowClear="false" TValue="CPTool.UnitsSystem.Unit"
                        Style=@UISettings.StyleBoxWidth100
                        class=@UISettings.ClassBox
                        Data=@Model.UnitsList TextProperty="Symbol" @bind-Value=@Model.Amount.Unit Name="Select"
                        Change=UnitChanged />
    </div>
</div>

