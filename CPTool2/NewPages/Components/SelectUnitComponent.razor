@if (debug)
{
    <MudGrid>
        <MudItem xs="12" sm="5">

            <MudField Variant="Variant.Outlined" FullWidth=true Margin="Margin.Dense">@Model.Name</MudField>
        </MudItem>
        <MudItem xs="12" sm="3">

            <MudNumericField @bind-Value=@Model.Value
                         TextChanged=OnValueChanged
                         Immediate=true
                         Variant="Variant.Outlined"
                         Margin="Margin.Dense"
                         HideSpinButtons=true
                         FullWidth=true
                         Format="G6"
                         Disabled=@Disable>

            </MudNumericField>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudSelect Dense="true"
                   Margin="Margin.Dense"
                   T="string"
                   FullWidth=true
                   AdornmentColor="Color.Primary"
                   AnchorOrigin="Origin.BottomCenter"
                   Value=@Model.UnitName
                   ValueChanged="UnitChanged"
                   Variant="Variant.Outlined">

                @foreach (var item in Model.UnitsList)
                {
                    <MudSelectItem Value="item.Name">@item.Symbol</MudSelectItem>
                }

            </MudSelect>

        </MudItem>
    </MudGrid>






}
@code {
    private int _spacing { get; set; } = 1;
    bool debug = true;
}
